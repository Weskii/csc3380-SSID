<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UserAreaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csc3380.lsu.rmettig.ssid.UserAreaActivity">

    <ImageView
        android:id="@+id/bgStatic"
        android:layout_width="467dp"
        android:layout_height="571dp"
        android:layout_marginBottom="-519dp"
        android:clickable="false"
        android:contentDescription=""
        app:layout_constraintBottom_toTopOf="parent"
        app:srcCompat="@drawable/background"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="-41dp" />

    <ImageView
        android:id="@+id/btnInventory"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/inventoryimage"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/txtShellCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/_000"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/btnPet"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/peticon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/myShark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteY="232dp"
        tools:layout_editor_absoluteX="168dp" />
</android.support.constraint.ConstraintLayout>
